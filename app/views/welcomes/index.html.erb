    letter-spacing: .5px;
    transition: .2s ease-out;
    cursor: pointer;
  }
  
  .btn1:hover {
    background-color: #888;
  }
  
  .btnn {
    border: none;
    border-radius: 2px;
    display: inline-block;
    height: 36px;
    line-height: 36px;
    outline: 0;
    padding: 0 2rem;
    text-transform: uppercase;
    vertical-align: middle;
    -webkit-tap-highlight-color: transparent;
  }
  
  .btnn {
    text-decoration: none;
    color: #fff;
    background: linear-gradient(120deg, #1AD6FD, #1D62F0);
    text-align: center;
    letter-spacing: .5px;
    transition: .2s ease-out;
    cursor: pointer;
  }
  
  .btnn:hover {
    background: linear-gradient(120deg, #1D62F0, #1AD6FD);
  }
  
  a {
    color: #337ab7;
    text-decoration: none;
  }
</style>

<div id="newconv">
  <nav style="margin-bottom: 10px">
    <h1 style="margin-left: 25px">Pending</h1>
  </nav>
  <table class="highlight striped table-advance">
    <thead>
      <tr>
        <th data-field="id">conversation.id | recipient_id</th>
        <th data-field="name">sender_id</th>
        <th data-field="time">created_at</th>
        <th data-field="price">Last Message</th>
        <th data-field="survey" style="width: 9%">Actions</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <%# if @conversations.any? %>
          <%# @conversations.each do |conversation| %>
          <%# if conversation.completed == nil %>
            <td class="highlight">
              <div class="warning"></div><a href="javascript: void(0)">conversation:<%#= conversation.id%> | user_id:<%#= conversation.recipient_id %></a></td>
            <td>user_id:
              <%#= conversation.sender_id %>
            </td>
            <td>
              <%#= distance_of_time_in_words(conversation.created_at, DateTime.now)%> ago</td>
            <td>
              <%#= conversation.messages.last.nil? ? "No messages" : truncate(conversation.messages.last.body, length: 45) %>
            </td>
            <td>
              <%#= link_to "Start", conversation_path(conversation), class: "conversation waves-effect waves-light btn", "data-cid" => conversation.id %>
              <%#= link_to "Done", complete_path(conversation), class:"btn", remote: true, :confirm => 'Are You Sure?', :onClick => "alert ('This conversation will be moved to the finished tab')" %>
            </td>
      </tr>
          <%# end %>
        <%# end %>
       <%# end %>
    </tbody>
  </table>
</div>

